<div class="page-header">
  <div>
    <h1>Νέο Post</h1>
    <p class="lead">Συμπλήρωσε τα στοιχεία και δημοσίευσε την ανακοίνωση.</p>
  </div>
</div>

<% if @post.errors.any? %>
  <div class="flash alert">
    <ul>
      <% @post.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, local: true, html: { class: "card form-card" } do |f| %>
  <div class="form-field">
    <%= f.label :title, "Τίτλος" %>
    <%= f.text_field :title %>
  </div>

  <div class="form-field">
    <%= f.label :body, "Κείμενο" %>
    <%= f.text_area :body, rows: 6 %>
  </div>

  <div class="form-field">
    <%= f.label :category, "Κατηγορία" %>
    <%= f.select :category, ["Μάθημα", "Ενδιαφέρον", "Ομαδική εργασία"] %>
  </div>

  <div>
    <%= f.submit "Δημιουργία" %>
  </div>
<% end %>

<div class="page-footer">
  <%= link_to "Πίσω", posts_path, class: "button ghost" %>
</div>
