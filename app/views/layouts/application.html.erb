<!DOCTYPE html>
<html>
  <head>
    <title>LabPortal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="app <%= controller_name %> <%= action_name %>">
    <header class="site-header" data-controller="notifications">
      <div class="brand">
        <%= link_to "Lab Portal", root_path, class: "brand-link" %>
      </div>
      <nav class="site-nav">
        <%= link_to "Posts", posts_path, class: "nav-link" %>
        <%= link_to "Contacts", contacts_path, class: "nav-link" %>
        <%= link_to "Messages", conversations_path, class: "nav-link" %>
        <%= link_to "Notifications", notifications_path, class: "nav-link" %>
      </nav>
      <div class="site-actions">
        <div class="notification-pill" data-notifications-target="indicator" hidden>Νέα ειδοποίηση</div>
        <% if user_signed_in? %>
          <span class="user-pill"><%= current_user.email %></span>
          <%= link_to "Αποσύνδεση", destroy_user_session_path, data: { turbo_method: :delete }, class: "button ghost" %>
        <% else %>
          <%= link_to "Σύνδεση", new_user_session_path, class: "button ghost" %>
          <%= link_to "Εγγραφή", new_user_registration_path, class: "button primary" %>
        <% end %>
      </div>
    </header>

    <main class="site-main">
      <% if notice.present? %>
        <div class="flash notice"><%= notice %></div>
      <% end %>
      <% if alert.present? %>
        <div class="flash alert"><%= alert %></div>
      <% end %>

      <div class="page">
        <%= yield %>
      </div>
    </main>

    <% if user_signed_in? %>
      <div class="notification-toast" data-notifications-target="toast" hidden>
        <div class="notification-toast-text" data-notifications-target="toastText"></div>
        <a class="button ghost" data-notifications-target="toastLink" href="#" hidden>Άνοιγμα</a>
        <button type="button" class="button ghost" data-action="click->notifications#hideToast">Κλείσιμο</button>
      </div>

      <div class="popup-container" data-controller="popup-messages">
        <div class="popup-backdrop" data-popup-messages-target="backdrop" data-action="click->popup-messages#hide" hidden></div>
        <div class="popup-panel" data-popup-messages-target="panel" hidden>
          <div class="popup-header">
            <div>
              <div class="popup-title">Νέο μήνυμα</div>
              <div class="popup-sender" data-popup-messages-target="sender"></div>
            </div>
            <button type="button" class="popup-close" data-action="click->popup-messages#hide">×</button>
          </div>
          <div class="popup-body" data-popup-messages-target="body"></div>
          <div class="popup-actions">
            <a class="button" href="#" data-popup-messages-target="link" data-action="click->popup-messages#open">Άνοιγμα συνομιλίας</a>
            <button type="button" class="button ghost" data-action="click->popup-messages#hide">Κλείσιμο</button>
          </div>
        </div>
      </div>
    <% end %>
  </body>
</html>
